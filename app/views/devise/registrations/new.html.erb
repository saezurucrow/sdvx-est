<h2>新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", required: true %>
    <small id="usernameHelp" class="form-text text-muted">4文字以上で英数字とアンダースコア(_)のみ使用可能です。他のユーザーと同じusernameは登録できません。</small>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email", class: "form-control", required: true %>
    <small id="emailHelp" class="form-text text-muted">パスワードの再設定に使用します。他のユーザーと同じemailは登録できません。</small>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
    <% if @minimum_password_length %>
    <small id="passwordHelp" class="form-text text-muted"><%= @minimum_password_length %>文字以上</small>
    <% end %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
  </div>

  <%= f.submit "新規登録", class: "btn btn-primary" %>
<% end %>
